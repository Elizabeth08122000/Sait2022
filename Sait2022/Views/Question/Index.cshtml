@model IEnumerable<Sait2022.Domain.Model.Questions>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionsTopic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rangs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberQuest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueQuest)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionsTopic.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rangs.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberQuest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueQuest)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
