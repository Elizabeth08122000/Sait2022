@model Sait2022.Domain.Model.Questions

@{
    ViewData["Title"] = "Создать вопрос";
}

<style>
input.form-control {
    width:  600px;
    height: 70px;
    padding: 5px 10px 5px 10px;
    border:1px solid #999;
    font-size:16px;
    /*font-family: Tahoma;*/
}
</style>
<style>
    input.form-question{
    width:  1000px;
    height: 70px;
    padding: 5px 10px 5px 10px;
    border:1px solid #999;
    font-size:16px;
    }
</style>

<h1>Создать вопрос</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>Ранг</h5>
                <select asp-for="RangsId" class ="form-control" asp-items="ViewBag.RangsId"></select>
            </div>
            <div class="form-group">
                <h5>Тема вопроса</h5>
                <select asp-for="QuestionTopcId" class ="form-control" asp-items="ViewBag.QuestionTopcId"></select>
            </div>
            <div class="form-group">
                <h5>Вопрос</h5>
                @*<input asp-for="ValueQuest" class="form-question"/>
                <span asp-validation-for="ValueQuest" class="text-danger"></span>*@
                <textarea rows="2" cols="110" name="ValueQuest"></textarea>
            </div>
            <div class="form-group">
                <h5>Ответ</h5>
                <input asp-for="ValueAnswer" class="form-control" />
                <span asp-validation-for="ValueAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Картинка</h5>
                <input name="uploadedFile2" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <h5>Файл</h5>
                <input name="uploadedFile" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернутся обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
