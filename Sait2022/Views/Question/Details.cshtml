@model Sait2022.Domain.Model.Questions

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h5>Номер вопроса</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            <h5>Тема вопроса</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionsTopic.Topic)
        </dd>
        <dt class = "col-sm-2">
            <h5>Ранг</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rangs.Id)
        </dd>
        <dt class = "col-sm-2">
            <h5>Вопрос</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValueQuest)
        </dd>
        <dt class = "col-sm-2">
            <h5>Ответ</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValueAnswer)
        </dd>
        <dt class = "col-sm-2">
            <h5>Excel</h5>
        </dt>
        <dt class = "col-sm-2">
            <a href="@Html.DisplayFor(model => model.Path)" target="_blank">@Html.DisplayFor(model => model.Name)</a>
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернутся обратно</a>
</div>
