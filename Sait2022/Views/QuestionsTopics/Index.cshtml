@model IEnumerable<Sait2022.Domain.Model.QuestionsTopic>

@{
    ViewData["Title"] = "Темы вопросов";
}

<h1>Темы вопросов</h1>

<p>
    <a asp-action="Create">Создать тему вопросов</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                 <h5>Номер темы вопроса</h5>
            </th>
            <th>
                 <h5>Тема вопроса</h5>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробности</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
