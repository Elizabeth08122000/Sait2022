@model Sait2022.Domain.Model.QuestionsTopic

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить тему вопроса?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           <h5>Номер темы вопроса</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            <h5>Тема вопроса</h5>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернутся обратно</a>
    </form>
</div>
