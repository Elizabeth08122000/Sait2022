@model IEnumerable<Sait2022.Domain.Model.QuestionsTopic>


@using(Html.BeginForm("CreateTest", "Questions", FormMethod.Post))
{
    @foreach(var item in Model)
    {
        <div class="form-group bmd-form-group">
            @*@Html.CheckBoxFor(x => (bool)item.IsUsedNow)*@
            <input checked="checked" data-val="true" id="@item.IsUsedNow" name="@item.IsUsedNow" type="checkbox" value="true" />
            <input name="@item.IsUsedNow" type="hidden" value="false" />
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(m => item.Topic)
            <p></p>
        </div>
        <input type="hidden" asp-for="@item.Id" />
    }
    
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
}


