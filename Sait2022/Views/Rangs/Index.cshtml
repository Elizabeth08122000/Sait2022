@model IEnumerable<Sait2022.Domain.Model.Rangs>

@{
    ViewData["Title"] = "Ранги";
}

<h1>Список рангов</h1>
@if (User.IsInRole("TEACHER") || User.IsInRole("ADMIN"))
{
    <p>
        <a asp-action="Create">Добавить ранг</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                <h5>Ранги</h5>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RangQuest)
            </td>
            <td>
                    @if (User.IsInRole("TEACHER") || User.IsInRole("ADMIN"))
                    {
                         <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                         <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
